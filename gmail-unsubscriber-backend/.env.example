# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:5000/oauth2callback
GOOGLE_PROJECT_ID=your_project_id_here

# Application Configuration
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here

# Frontend Configuration
FRONTEND_URL=http://localhost:8000

# Environment Configuration
# Set to 'development' for local development (enables OAuth over HTTP)
# Leave unset or set to 'production' for production deployments
ENVIRONMENT=development

# Production URLs (for deployment)
PRODUCTION_FRONTEND_URL=https://your-frontend-domain.com
PRODUCTION_BACKEND_URL=https://your-backend-domain.com

# Optional: Redirect URI for production
REDIRECT_URI=https://your-backend-domain.com/oauth2callback